<ul class="navbar-nav">
  {% for item in items %}
    <li class="nav-item{% if item.below %} dropdown{% endif %}">
      <a class="nav-link{% if item.below %} dropdown-toggle{% endif %}" href="{{ item.url }}" {% if item.below %} data-bs-toggle="dropdown" role="button" aria-expanded="false" {% endif %}>
        {{ item.title }}
      </a>
      {% if item.below %}
        <ul class="dropdown-menu">
          {% for sub_item in item.below %}
            <li>
              <a class="dropdown-item" href="{{ sub_item.url }}">
                {{ sub_item.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </li>
  {% endfor %}
</ul>
